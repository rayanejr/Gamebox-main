<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ticstart_screen"
    tools:context=".StartTicActivity"
    tools:ignore="DuplicateIds">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playOff"
        android:layout_width="235dp"
        android:layout_height="49dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="274dp"
        android:layout_marginBottom="408dp"
        android:background="@color/yellow"
        android:text="@string/play_offline"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/SObutton"
        android:layout_width="83dp"
        android:layout_height="32dp"
        android:layout_marginStart="293dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="666dp"
        app:backgroundTint="@color/purple_200"
        app:icon="@drawable/baseline_logout_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/game_id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="195dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="115dp"
        android:hint="@string/enter_the_game_id"
        android:inputType="number"
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/joinGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playOn"
        app:layout_constraintVertical_bias="0.813" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/joinGame"
        android:layout_width="235dp"
        android:layout_height="49dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="171dp"
        android:layout_marginBottom="80dp"
        android:background="@color/yellow"
        android:text="@string/join_game_online"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playOn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playOn"
        android:layout_width="235dp"
        android:layout_height="49dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="300dp"
        android:background="@color/yellow"
        android:text="@string/create_game_online"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playOff" />


</androidx.constraintlayout.widget.ConstraintLayout>